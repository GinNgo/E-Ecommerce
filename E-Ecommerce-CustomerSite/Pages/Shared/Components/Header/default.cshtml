    <header>
        <div class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  box-shadow top-header">
            <div class="container-xl float-start">
                <a class=" ms-2 logo-main" asp-page="Index">
                    <img src="https://localhost:44324/wwwroot/Upload/logo.png"  class="dropdown-toggle " style="height:65px" asp-append-version="true">

                </a>
                <div class="flex-fix col-9 ms-2">
                    <div class="flex-fix p-0">
                        <div class="flex-fix">
                            <div class="border border-2 rounded-circle p-2 circle-header">
                                <img src="https://localhost:44324/wwwroot/Upload/shopping.svg" class="img-header" asp-append-version="true">
                            </div>
                            <div class="mt-2 me-2 ms-2 title-header ">
                                <h5 class="m-0 ">Mua hàng</h5>
                                <p class="m-0 header-p lh-base">Cam kết chất lượng</p>
                            </div>
                        </div>
                    </div>
                    <div class=" p-0">
                        <div class="flex-fix">
                            <div class="border border-2 rounded-circle p-2 circle-header">
                                <img src="https://localhost:44324/wwwroot/Upload/shopping.svg" class="img-header" asp-append-version="true">
                            </div>
                            <div class="mt-2 me-2 ms-2 title-header">
                                <h5 class="m-0 ">Mua hàng</h5>
                                <p class="m-0 header-p lh-base">Cam kết chất lượng</p>
                            </div>
                        </div>
                    </div>              <div class=" p-0">
                        <div class="  flex-fix">
                            <div class="border border-2 rounded-circle p-2 circle-header">
                                <img src="https://localhost:44324/wwwroot/Upload/payment.svg" class="img-header" asp-append-version="true">
                            </div>
                            <div class="mt-2 me-2 ms-2 title-header">
                                <h5 class="m-0 ">Thanh Toán</h5>
                                <p class="m-0 header-p lh-base">Giao Hàng & Thanh Toán Tại Nhà</p>
                            </div>
                        </div>
                    </div>              <div class="p-0">
                        <div class="  flex-fix">
                            <div class="border border-2 rounded-circle p-2 circle-header">
                                <img src="https://localhost:44324/wwwroot/Upload/return.svg" class="img-header text-black" asp-append-version="true">
                            </div>
                            <div class="mt-2 me-2 ms-2 title-header">
                                <h5 class="m-0 ">Đổi trả hàng</h5>
                                <p class="m-0 header-p lh-base">Trong Vòng 05 Ngày(*)</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>


        </div>
        <nav class="navbar navbar-expand-sm p-0  bottom-header" style="background-color:#43c0e4">

            <div class="container-xl h-100">
                <div class="d-flex h-100" id="categories">
                    <a class="home-link " asp-page="" title="Chiaki.vn" data-toggle="tooltip" data-placement="right"> <img width="20" height="20" src="https://localhost:44324/wwwroot/Upload/home-menu.svg" alt="Siêu thị trực tuyến Chiaki.vn"> </a>
                    <div class="category-title col-ms-6 col-md-3 p-3  me-md-3  me-lg-0 dropdown-toggle fw-bolder text-white fs-5 ">
                        Danh mục sản phẩm
                    </div>
                    @await Component.InvokeAsync("Categories")
                </div>
                <!-- form tìm kiếm  -->
                <form asp-page="Search" class="form-inline w-50" method="get">
                    <div class="input-group w-75">

                        <input name="q" type="text" class="form-control"
                           placeholder="Nhập sách cần tìm kiếm...">
                        <div class="input-group-append">
                            <button asp-page="Search" type="submit" class="btn" style="background-color: #34b0dd; color: white;">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>

                <div class="navbar-nav mb-1 ml-auto">
                    @if(ViewBag.Token==null){
                    <ul class="dropdown mb-0">
                        <li class="nav-item account" type="button" data-bs-toggle="dropdown" role="button" aria-expanded="false">
                            <a href="#" class="btn btn-secondary rounded-circle">
                                <i class="fa fa-user"></i>
                            </a>
                            <a class="nav-link text-dark text-uppercase pt-0" href="#" style="display:inline-block">
                                Tài
                                khoản
                            </a>
                        </li>
                        <li class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item nutdangky text-center mb-2" asp-page="SignUp">Đăng ký</a>
                                <a class="dropdown-item nutdangnhap text-center" asp-page="Login">Đăng nhập</a>
                        </li>
                        </ul>
                    }
                    else
                    {
                        <div>Xin chào, @ViewBag.Username</div>
                        <div class="nav-item giohang account">
                        <a class="btn btn-secondary rounded-circle" asp-page="Index" asp-page-handler="LogOut" >
                            <i class="fa fa-arrow-right-from-bracket"> </i>
                  
                        </a>
                        <a  asp-page="Index" asp-page-handler="LogOut" class="nav-link text-dark giohang text-uppercase"  style="display:inline-block">
                            Logout
                        </a>
                        </div>
                      
                    }

                    <div class="nav-item giohang account">
                        <a  class="btn btn-secondary rounded-circle" asp-page="shoppingcart">
                            <i class="fa fa-shopping-cart"></i>
                            <div class="cart-amount">0</div>
                        </a>
                        <a asp-page="shoppingcart" class="nav-link text-dark giohang text-uppercase"  style="display:inline-block">
                            Giỏ
                            Hàng
                        </a>
                    </div>
                </div>
            </div>

        </nav>
      

 



    </header>
