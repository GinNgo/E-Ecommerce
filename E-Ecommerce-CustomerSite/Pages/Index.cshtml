                                    <div class="giacu text-muted">139.000 ₫</div>
                                    <div class="sale">-20%</div>
                                </div>
                                @await Component.InvokeAsync("RatingCart",product)
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

</section>
